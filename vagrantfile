Vagrant.configure("2") do |config|
  config.vm.define "linux" , autostart: true, primary: true do |db|
    config.vm.box = "centos/7"
    config.vm.box_version = "1902.01"
    # MYSQL Node 1
    config.vm.network "forwarded_port", guest: 13306, host: 13306
    # MYSQL Node 2
    config.vm.network "forwarded_port", guest: 23306, host: 23306
  end


  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048"
    vb.cpus = 2
    vb.name = "poc-mysql-docker"
    vb.gui = false
  end

  config.vm.provider "hyperv" do |vb|
    vb.memory = "2048"
    vb.cpus = 2
    vb.vmname = "poc-mysql-docker"
  end

  config.vm.provision "ansible_local" do |ansible|
    # Uncomment this line to enable verbose
    # ansible.verbose = "v"
    ansible.compatibility_mode  = "2.0"
    ansible.playbook = "playbook.yml"
    # Set or Comment this line to enable/disable Ansible Tags (check in playbook)
    #ansible.tags = "provisioning"
    # Only Skip those tags
    # ansible.skip_tags = 'provisioning,build,jenkins'
    ansible.extra_vars = {
        default_user: 'vagrant',
        MYSQL_ROOT_PASSWORD: 'Pa$$w0rd',
        MYSQL_DATABASE: 'example-db',
        MYSQL_USER: 'example_user',
        MYSQL_PASSWORD: '123456'
        }
  end
end